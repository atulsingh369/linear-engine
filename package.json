{
  "name": "linear-engine",
  "version": "0.1.0",
  "private": true,
  "description": "CLI scaffolding for Linear integration",
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "linear": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "start:api": "node dist/api/server.js",
    "dev:api": "tsup --watch --onSuccess \"node dist/api/server.js\"",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@linear/sdk": "^40.0.0",
    "dotenv": "^16.4.7",
    "hono": "^4.6.10",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "@types/yargs": "^17.0.33",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  }
}
